{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Obesity rate per Country with COVID-19 Active Cases",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/arnav-bhalla/Data-Vis/main/final.csv"
        },
        "key": "country",
        "fields": ["obese_rate"]
      }
    },
    { "calculate": "datum.obese_rate", "as": "Obesity Rate" }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "width": 800,
      "height": 500,
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "projection": { "type": "equalEarth" },
      "transform": [
        { "calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note" }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": { "field": "note" }
      }
    },
    {
      "mark": { "type": "geoshape", "stroke": "white" },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/arnav-bhalla/Data-Vis/main/final.csv"
            },
            "key": "Country",
            "fields": ["obese_rate"]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "obese_rate",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000, 100000, 500000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "obese_rate", "type": "quantitative" }
        ]
      }
    }
  ],
  "encoding": {
    "color": {
      "field": "Obesity Rate",
      "type": "quantitative"
    },
    "tooltip": [
      { "field": "properties.NAME", "type": "nominal", "title": "Country" },
      { "field": "Obesity Rate", "type": "quantitative" }
    ]
  }
}
